// ============================================
// SUBSCRIPTION MODELS
// ============================================

model Subscription {
  id           String @id @default(uuid())
  name         String
  description  String
  priceInCents Int

  userSubscriptions UserSubscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSubscription {
  id String @id @default(uuid())

  // Subscription plan
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])

  // User relation (1:1 for active, 1:N for history)
  activeUserId  String? @unique
  activeUser    User?   @relation("ActiveSubscription", fields: [activeUserId], references: [id])
  historyUserId String
  historyUser   User    @relation("SubscriptionHistory", fields: [historyUserId], references: [id])

  // Period control
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime?

  // Status
  status      SubscriptionStatus @default(ACTIVE)
  cancelledAt DateTime?

  // Stripe integration
  stripeSubscriptionId String? @unique

  // Relations
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([activeUserId])
  @@index([historyUserId])
  @@index([status])
  @@index([subscriptionId])
}

// ============================================
// BOOKING MODEL
// ============================================

model Booking {
  id        String   @id @default(uuid())
  date      DateTime @db.Timestamptz
  cancelled Boolean? @default(false)

  // Service
  serviceId String
  service   BarberService @relation(fields: [serviceId], references: [id])

  // User
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Subscription (optional - only if paid with subscription)
  userSubscriptionId   String?
  userSubscription     UserSubscription? @relation(fields: [userSubscriptionId], references: [id])
  paidWithSubscription Boolean           @default(false)

  // Payment
  stripeChargeId String?
  stripeEventId  String? @unique

  // Cancellation
  cancelledAt DateTime? @db.Timestamptz

  // barbershopId String
  // barbershop   Barbershop @relation(fields: [barbershopId], references: [id])

  @@index([serviceId])
  @@index([userId])
  @@index([date])
  @@index([userSubscriptionId])
}
