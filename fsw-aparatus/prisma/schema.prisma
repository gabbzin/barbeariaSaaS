generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String
  phones      String[]
  services    BarbershopService[] // São uma lista da tabela de serviços
}

model BarbershopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id]) // Relação com a tabela da Barbearia
  priceInCents Int // Melhor forma de salvar valor monetário
}

model Booking {
  id           String    @id @default(uuid())
  serviceId    String
  barbershopId String
  date         DateTime  @db.Timestamptz // Melhor configuração para salvar datas
  cancelled    Boolean?  @default(false)
  cancelledAt  DateTime? @db.Timestamptz
}
